---
interface Props {
  href?: string;
  target?: string;
  rel?: string;
  variant?: string;
  id?: string;
}

const { href, target, rel, variant, id } = Astro.props;
---

{
  href ? (
    <a
      href={href}
      target={target}
      rel={rel}
      id={id}
      class={`inline-block rounded-lg ${variant == "outline" ? "border border-[rgba(250,250,250,0.1)] hover:bg-[rgba(250,250,250,0.1)] text-white" : "bg-white text-black hover:bg-[rgba(250,250,250,0.9)]"} px-4 py-2 transition-all text-sm font-medium`}
    >
      <slot />
    </a>
  ) : (
    <button
      id={id}
      class={`inline-block rounded-lg ${variant == "outline" ? "border border-[rgba(250,250,250,0.1)] hover:bg-[rgba(250,250,250,0.1)] text-white" : "bg-white text-black hover:bg-[rgba(250,250,250,0.9)]"} px-4 py-2 transition-all text-sm font-medium`}
    >
      <slot />
    </button>
  )
}
